<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/toolbar_text_color</item>
        <item name="android:textColorSecondary">@color/toolbar_text_color</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
    </style>

    <!-- TOOLBAR STYLE -->
    <style name="toolbar_dimen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/toolbar_back</item>
    </style>

</resources>
